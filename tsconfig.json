{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["scripts/**/*", "netlify/functions/**/*"],
  "exclude": ["node_modules"]
} 