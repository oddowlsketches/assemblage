{
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "dev:site": "cd assemblage-web && npm run dev",
    "db:push": "ts-node scripts/dbSync.ts",
    "db:studio": "supabase studio",
    "seed:images": "node scripts/seedPublicImages.js",
    "reprocess-metadata": "ts-node scripts/reprocess_missing_metadata.ts",
    "setup:cms": "node scripts/setup-cms-collections.mjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4"
  },
  "dependencies": {
    "@netlify/functions": "^3.1.8",
    "@supabase/supabase-js": "^2.43.4",
    "dotenv": "^16.5.0",
    "node-fetch": "^2.7.0",
    "openai": "^4.98.0",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0",
    "zod": "^3.23.6"
  }
}
